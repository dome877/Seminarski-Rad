@model Seminarski_Rad.Models.Kategorija

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @*Prikazuje greške na razini modela*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*Prikazuje greške sumarno i na razini modela*@
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                @*Ovdje će se prikazati greška na razini modela*@
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <input type="submit" value="Create" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" />
            </div>
        </form>
    </div>
</div>

<div class="pt-2">
    <a asp-action="Index">Nazad na popis</a>
</div>



