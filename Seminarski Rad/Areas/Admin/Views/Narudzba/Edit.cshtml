                <label asp-for="NarudzbaPostanskibroj" class="control-label"></label>
                <input asp-for="NarudzbaPostanskibroj" class="form-control" />
                <span asp-validation-for="NarudzbaPostanskibroj" class="text-danger"></span>
            </div>            
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Poruka" class="control-label"></label>
                <input asp-for="Poruka" class="form-control" />
                <span asp-validation-for="Poruka" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </form>
</div>

