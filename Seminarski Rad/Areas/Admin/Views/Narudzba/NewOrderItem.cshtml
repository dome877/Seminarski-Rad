@model NarudzbaItem


<h1>Dodaj novi proizvod za narudžbu</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="NewOrderItem">
            <input type="hidden" asp-for="NarudzbaId"/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProizvodId" class="control-label"></label>
                <select asp-for="ProizvodId" class="form-control" asp-items="@ViewBag.Products"></select>
                <span asp-validation-for="ProizvodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Količina" class="control-label"></label>
                <input asp-for="Količina" class="form-control" />
                <span asp-validation-for="Količina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create new order item" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to order list</a>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }